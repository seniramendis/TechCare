<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:padding="16dp"
    android:background="@drawable/bg_bottom_nav_curvy">

    <ImageView
        android:id="@+id/img_status_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_nav_bookings"
        app:tint="@color/brand_primary"
        android:background="@drawable/bg_bottom_nav_curvy"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="iPhone 13 Pro"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/img_status_icon"
        app:layout_constraintTop_toTopOf="@id/img_status_icon"
        app:layout_constraintEnd_toStartOf="@+id/chip_status"/>

    <TextView
        android:id="@+id/tv_issue_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Screen cracked, touch not working"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_device_name"
        app:layout_constraintStart_toEndOf="@id/img_status_icon"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/chip_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Received"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_bottom_nav_curvy"
        android:backgroundTint="#FF9800"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/glass_stroke"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_issue_desc"/>

    <TextView
        android:id="@+id/tv_booking_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order #1024"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_issue_desc"/>

    <TextView
        android:id="@+id/tv_service_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Pickup"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/brand_primary"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_issue_desc"/>

</androidx.constraintlayout.widget.ConstraintLayout>