<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_background"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_title_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book a Repair"
        android:textColor="@color/text_primary"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lbl_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device Type"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title_booking"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_device"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:drawable/editbox_background"
        android:hint="e.g. iPhone 13, Samsung TV"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/lbl_device"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/lbl_issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Describe the Issue"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_device"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_issue"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:drawable/editbox_background"
        android:gravity="top|start"
        android:padding="8dp"
        android:hint="e.g. Screen is cracked, won't turn on"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/lbl_issue"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/lbl_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Type"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_issue"
        app:layout_constraintStart_toStartOf="parent"/>

    <RadioGroup
        android:id="@+id/rg_service_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/lbl_type"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/rb_pickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Pickup"
            android:textColor="@color/text_primary"/>

        <RadioButton
            android:id="@+id/rb_dropoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drop-off Center"
            android:textColor="@color/text_primary"
            android:checked="true"/>
    </RadioGroup>

    <Button
        android:id="@+id/btn_submit_request"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Submit Request"
        android:backgroundTint="#4CAF50"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/rg_service_type"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>